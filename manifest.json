{
  "name": "Page Redder",
  "description": "Make the current page red",
  "version": "2.0",
  "permissions": ["contextMenus", "tabs", "activeTab", "storage",
    "http://*/*", "https://*/*"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": true
  },
  "manifest_version": 2
}